.t7e-edit-mode
  [data-t7e-key]
    outline: 1px dashed gray

    &:hover
      outline: 2px solid rgba(gray, 0.5)

  .t7e-selected
    background: rgba(yellow, 0.25)
    outline: 2px solid gray

.t7e-controls
  background: white
  border: 1px solid gray
  border-radius: 3px
  box-shadow: 0 1px 2px rgba(black, 0.33)
  font: bold 14px sans-serif
  padding: 5px
  position: fixed
  right: 10px
  top: 10px

  .t7e-controls-title
    color: gray

  button
    cursor: pointer

  .t7e-attributes-container
    label
      display: block
